<html>
  <head>
    <title><%=locals.title%></title>
    <link rel="stylesheet" href="/css/home.css" />
    <script
      src="https://kit.fontawesome.com/e03918a86a.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div id="container">
      <div id="headingsection">
        <span id="icon"
          ><i id="myIcon" class="fa-solid fa-address-book"></i
        ></span>
        <h1 id="contactheading">Contact List</h1>
      </div>

      <div id="container-div">
        <ul>
          <% for(let i of Contact_List){%>
          <li>
            <div class="contact-details">
              <span><%=i.name%></span>
              <span><%=i.phone%></span>
            </div>

            <div class="delete-button">
              <a href="/delete-contact/?id=<%=i.id%>"
                ><i class="fa-solid fa-rectangle-xmark"></i
              ></a>
            </div>
          </li>
          <%}%>
        </ul>
        <form action="/create-contact" method="POST">
          <input
            type="text"
            name="name"
            placeholder="Enter the name"
            required
          />
          <input
            type="number"
            name="phone"
            placeholder="Enter the number"
            required
          />
          <button type="submit">Add Contact</button>
        </form>
      </div>
    </div>
  </body>
</html>
